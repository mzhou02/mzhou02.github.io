<div class="grid-sizer"></div>
<div class="grid-item">
  <a href="{% if program.redirect %}{{ program.redirect }}{% else %}{{ program.url | relative_url }}{% endif %}">
    <div class="card hoverable">
      {% if program.img %}
        {%
          include figure.liquid
          loading="eager"
          path=program.img
          sizes = "250px"
          alt="program thumbnail"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title text-lowercase">{{ program.title }}</h2>
        <p class="card-text">{{ program.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if program.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ program.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if program.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ program.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
