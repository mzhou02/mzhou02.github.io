<div class="teaching-section">
  <h3 class="section-title">Teaching Experience</h3>
  <div class="teaching-timeline">
    {% for teaching in site.data.cv %}
      {% if teaching.title == "Teaching" %}
        {% for content in teaching.contents %}
          <div class="teaching-item">
            <div class="teaching-header">
              <div class="teaching-year">
                <span class="badge badge-primary">{{ content.year }}</span>
              </div>
              <div class="teaching-details">
                <h4 class="teaching-title">{{ content.title }}</h4>
                <p class="teaching-institution">{{ content.institution }}</p>
                {% if content.description %}
                  <div class="teaching-description">
                    <ul class="teaching-courses">
                      {% for course in content.description %}
                        <li class="teaching-course">{{ course }}</li>
                      {% endfor %}
                    </ul>
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
.teaching-section {
  margin: 2rem 0;
}

.section-title {
  color: #2e59f2;
  border-bottom: 2px solid #2e59f2;
  padding-bottom: 0.5rem;
  margin-bottom: 1.5rem;
  font-size: 1.5rem;
  font-weight: 600;
}

.teaching-timeline {
  position: relative;
}

.teaching-item {
  margin-bottom: 2rem;
  padding-left: 2rem;
  position: relative;
}

.teaching-item:not(:last-child)::before {
  content: '';
  position: absolute;
  left: 0.5rem;
  top: 2rem;
  bottom: -2rem;
  width: 2px;
  background: #e0e0e0;
}

.teaching-item::after {
  content: '';
  position: absolute;
  left: 0.25rem;
  top: 1.5rem;
  width: 0.5rem;
  height: 0.5rem;
  background: #2e59f2;
  border-radius: 50%;
}

.teaching-header {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
}

.teaching-year {
  flex-shrink: 0;
  margin-top: 0.25rem;
}

.badge {
  display: inline-block;
  padding: 0.25rem 0.75rem;
  font-size: 0.875rem;
  font-weight: 500;
  line-height: 1;
  text-align: center;
  white-space: nowrap;
  vertical-align: baseline;
  border-radius: 0.375rem;
}

.badge-primary {
  color: #fff;
  background-color: #2e59f2;
}

.teaching-details {
  flex: 1;
}

.teaching-title {
  margin: 0 0 0.5rem 0;
  font-size: 1.25rem;
  font-weight: 600;
  color: #333;
}

.teaching-institution {
  margin: 0 0 0.75rem 0;
  font-size: 1rem;
  color: #666;
  font-weight: 500;
}

.teaching-description {
  margin-top: 0.5rem;
}

.teaching-courses {
  margin: 0;
  padding: 0;
  list-style: none;
}

.teaching-course {
  margin-bottom: 0.5rem;
  padding: 0.5rem 0.75rem;
  background-color: #f8f9fa;
  border-left: 3px solid #2e59f2;
  border-radius: 0.25rem;
  font-size: 0.95rem;
  font-weight: 500;
  color: #333;
}

.teaching-course:last-child {
  margin-bottom: 0;
}

@media (max-width: 768px) {
  .teaching-header {
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .teaching-year {
    align-self: flex-start;
  }
  
  .teaching-item {
    padding-left: 1.5rem;
  }
}
</style>
