<div class="education-section">
  <h3 class="section-title">Education</h3>
  <div class="education-timeline">
    {% for education in site.data.cv %}
      {% if education.title == "Education" %}
        {% for content in education.contents %}
          <div class="education-item">
            <div class="education-header">
              <div class="education-year">
                <span class="badge badge-primary">{{ content.year }}</span>
              </div>
              <div class="education-details">
                <h4 class="education-title">{{ content.title }}</h4>
                <p class="education-institution">{{ content.institution }}</p>
                {% if content.description %}
                  <div class="education-description">
                    {% for item in content.description %}
                      {% if item.contents %}
                        <div class="education-degree">
                          <strong>{{ item.title }}</strong>
                          <ul class="education-details-list">
                            {% for subitem in item.contents %}
                              <li class="education-detail-item">{{ subitem }}</li>
                            {% endfor %}
                          </ul>
                        </div>
                      {% else %}
                        <div class="education-degree">{{ item }}</div>
                      {% endif %}
                    {% endfor %}
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
.education-section {
  margin: 2rem 0;
}

.section-title {
  color: #2e59f2;
  border-bottom: 2px solid #2e59f2;
  padding-bottom: 0.5rem;
  margin-bottom: 1.5rem;
  font-size: 1.5rem;
  font-weight: 600;
}

.education-timeline {
  position: relative;
}

.education-item {
  margin-bottom: 2rem;
  padding-left: 2rem;
  position: relative;
}

.education-item:not(:last-child)::before {
  content: '';
  position: absolute;
  left: 0.5rem;
  top: 2rem;
  bottom: -2rem;
  width: 2px;
  background: #e0e0e0;
}

.education-item::after {
  content: '';
  position: absolute;
  left: 0.25rem;
  top: 1.5rem;
  width: 0.5rem;
  height: 0.5rem;
  background: #2e59f2;
  border-radius: 50%;
}

.education-header {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
}

.education-year {
  flex-shrink: 0;
  margin-top: 0.25rem;
}

.badge {
  display: inline-block;
  padding: 0.25rem 0.75rem;
  font-size: 0.875rem;
  font-weight: 500;
  line-height: 1;
  text-align: center;
  white-space: nowrap;
  vertical-align: baseline;
  border-radius: 0.375rem;
}

.badge-primary {
  color: #fff;
  background-color: #2e59f2;
}

.education-details {
  flex: 1;
}

.education-title {
  margin: 0 0 0.5rem 0;
  font-size: 1.25rem;
  font-weight: 600;
  color: #333;
}

.education-institution {
  margin: 0 0 0.75rem 0;
  font-size: 1rem;
  color: #666;
  font-weight: 500;
}

.education-description {
  margin-top: 0.5rem;
}

.education-degree {
  margin-bottom: 0.5rem;
  font-size: 0.95rem;
  line-height: 1.5;
}

.education-details-list {
  margin: 0.5rem 0 0 1rem;
  padding: 0;
  list-style: none;
}

.education-detail-item {
  margin-bottom: 0.25rem;
  font-size: 0.9rem;
  color: #555;
  font-style: italic;
}

@media (max-width: 768px) {
  .education-header {
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .education-year {
    align-self: flex-start;
  }
  
  .education-item {
    padding-left: 1.5rem;
  }
}
</style>
